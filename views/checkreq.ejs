<%- include('./includes/header.ejs') %>

<div class="container mb-5">
    <a href="/admin" class="btn btn-outline-success mt-5">Back</a>
    <h2 class="text-center alert alert-success mt-3">List of books</h2>
    <div id="booksTable">
        <% if(bookdata.length >= 1 ){ %>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Code</th>
                    <th scope="col">Author</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% var i=1 %>
                <% bookdata.forEach((item)=>{ %>
                    <tr>
                        <td><%= i++ %></td>
                        <td><%= item.book_name %></td>
                        <td><%= item.code %></td>
                        <td><%= item.book_author %></td>
                        <td><%= item.status %></td>
                        <td>
                            <a class="btn btn-success" href="/action/Accepted/<%= item.id %>">Accept</a>
                            <a class="btn btn-danger" href="/action/Rejected/<%= item.id %>">Reject</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% }else{%>
            <h4 class="text-center pt-5">No data found</h4>
        <% } %>
    </div>
</div>

<%- include('./includes/footer.ejs') %>
